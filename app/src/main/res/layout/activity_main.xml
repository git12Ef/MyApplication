<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="36sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Button"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onInfoClick"
            android:padding="5dp"
            android:text="Info"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="%"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onCalcClick"
            android:padding="5dp"
            android:text="="
            android:textSize="30sp"
            tools:text="=" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="1"
            android:textSize="30sp"
            tools:text="1" />

        <Button
            android:id="@+id/b_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="2"
            android:textSize="30sp"
            tools:text="2" />

        <Button
            android:id="@+id/b_7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="3"
            android:textSize="30sp"
            tools:text="3" />

        <Button
            android:id="@+id/b_8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="4"
            android:textSize="30sp"
            tools:text="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="5"
            android:textSize="30sp"
            tools:text="5" />

        <Button
            android:id="@+id/b_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="6"
            android:textSize="30sp"
            tools:text="6" />

        <Button
            android:id="@+id/b_11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="7"
            android:textSize="30sp"
            tools:text="7" />

        <Button
            android:id="@+id/b_12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="8"
            android:textSize="30sp"
            tools:text="8" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="9"
            android:textSize="30sp"
            tools:text="9" />

        <Button
            android:id="@+id/b_14"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDiditClick"
            android:padding="5dp"
            android:text="0"
            android:textSize="30sp"
            tools:text="0" />

        <Button
            android:id="@+id/b_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDotClick"
            android:padding="5dp"
            android:text="."
            android:textSize="30sp"
            tools:text="." />

        <Button
            android:id="@+id/b_16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onCClick"
            android:padding="5dp"
            android:text="C"
            android:textSize="30sp"
            tools:text="C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b_17"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onPlusClick"
            android:padding="5dp"
            android:text="+"
            android:textSize="30sp"
            tools:text="+" />

        <Button
            android:id="@+id/b_18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onMinusClick"
            android:padding="5dp"
            android:text="-"
            android:textSize="30sp"
            tools:text="-" />

        <Button
            android:id="@+id/b_19"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onUmnojitClick"
            android:padding="5dp"
            android:text="*"
            android:textSize="30sp"
            tools:text="*" />

        <Button
            android:id="@+id/b_20"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:onClick="onDelitClick"
            android:padding="5dp"
            android:text="/"
            android:textSize="30sp"
            tools:text="/" />
    </LinearLayout>

</LinearLayout>